{
  "appId": "d0e06949-fd64-437a-9bfe-ce3cf2d7b63d",
  "numberOfWorkers": 0,
  "proxy": {
    "globalMiddlewares": [
      {
        "type": "AccessLoggingMiddleware",
        "args": {}
      },
      {
        "type": "SpamFilter",
        "args": {
          "strategy": "MethodRequestFilter;PROPFIND"
        }
      },
      {
        "type": "SpamFilter",
        "args": {
          "strategy": "EndsWithPathSpamFilter;php"
        }
      },
      {
        "type": "SpamFilter",
        "args": {
          "strategy": "ContainsStringInPathSpamFilter;wp-,.git"
        }
      }
    ],
    "servers": [
      {
        "port": 7080,
        "protocol": "http",
        "options": {}
      }
    ],
    "gateways": []
  },
  "administration": {
    "port": 7777,
    "bindOnlyLocalhost": true,
    "authenticator": {
      "type": "none"
    }
  },
  "repository": {
    "type": "file",
    "filePath": "gateways.json"
  },
  "alarmist": {
    "smtpServer": "smtp.nunum.me",
    "smtpPort": 25,
    "senderEmail": "proxy@talos.sh",
    "subject": "EchoGate Proxy Error",
    "recipients": [
      "nuno@nunum.me"
    ],
    "errorEmailTemplateFile": "template/email.html"
  },
  "logging": {
    "accessLog": {
      "level": "info",
      "format": ":remote-addr - \":method :url HTTP/:http-version\" :status :content-length \":referrer\" \":user-agent\" :response-time :req[host] \":req[x-correlation-id]\"",
      "logDirectory": "./"
    },
    "proxy": {
      "level": "debug"
    },
    "admin": {
      "level": "info"
    },
    "worker": {
      "level": "info"
    }
  }
}
