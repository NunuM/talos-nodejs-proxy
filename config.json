{
  "appId": "d0e06949-fd64-437a-9bfe-ce3cf2d7b63d",
  "numberOfWorkers": 2,
  "proxy": {
    "globalMiddlewares": [
      {
        "type": "AccessLoggingMiddleware",
        "args": {}
      }
    ],
    "servers": [
      {
        "port": 7080,
        "protocol": "http",
        "options": {}
      },
      {
        "port": 7081,
        "protocol": "http2",
        "options": {
          "key": "ssl/key3.pem",
          "cert": "ssl/cert3.pem",
          "allowHTTP1": true
        }
      }
    ],
    "gateways": []
  },
  "administration": {
    "port": 7777,
    "bindOnlyLocalhost": true,
    "authenticator": {
      "type": "basic",
      "username": "nuno",
      "password": "test"
    }
  },
  "repository": {
    "type": "redis",
    "redisConnectionString": "redis://192.168.1.199:6379/0"
  },
  "alarmist": {
    "smtpServer": "smtp.nunum.me",
    "smtpPort": 25,
    "senderEmail": "proxy@talos.sh",
    "subject": "EchoGate Proxy Error",
    "recipients": [
      "nuno@nunum.me"
    ],
    "errorEmailTemplateFile": "template/email.html"
  },
  "logging": {
    "accessLog": {
      "level": "info",
      "format": ":remote-addr - \":method :url HTTP/:http-version\" :status :content-length \":referrer\" \":user-agent\" :response-time :req[host] \":req[x-correlation-id]\"",
      "logDirectory": "./"
    },
    "proxy": {
      "level": "debug"
    },
    "admin": {
      "level": "info"
    },
    "worker": {
      "level": "info"
    }
  }
}
